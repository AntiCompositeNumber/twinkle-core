{
	"compilerOptions": {
		"target": "es5",
		"module": "ES2020",
		"lib": [
			"dom",
			"es5",
			"es2015.collection" // Only Map and Set from this are supported in IE 11.
		],
		"outDir": "./build",
		"sourceMap": true,
		"declaration": true,
		"moduleResolution": "node",
		"types": ["jest", "./node_modules/types-mediawiki", "./morebits"],
		"esModuleInterop": true,
		"newLine": "lf"
	},
	"include": ["src/**/*", "morebits/index.d.ts"],
	"compileOnSave": true
}
